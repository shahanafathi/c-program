#include <stdio.h>

int main()
{
    int a;
    printf("Choose a number : ");
    scanf("%d",&a);
    switch (a){
        case 1:
            printf("Good morning");
            break;
        case 2:
            printf("good afternoon");
            break;
        case 3:
            printf("good evening");
            break;
        default:
            printf("Nothing");
    }
    return 0;
}
