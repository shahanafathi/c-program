#include <stdio.h>

int main()
{
    char op;
    int a,b,c;
    printf("enter the operator(+,-,*,/)");
    scanf("%c",&op);
    printf("enter the  number");
    scanf("%d",&a);
    printf("enter the  number");
    scanf("%d",&b);
    switch(op)
    {
        case '+':
            c=a+b;
            printf(" answer is:%d",c);
            break;
        case '-':
            c=a-b;
            printf("answer is:%d",c);
            break;
        case '*':
            c=a*b;
            printf(" answer is:%d",c);
            break;
        case '/':
            c=a/b;
            printf(" answer is:%d",c);
            break;
        default:
            printf("invalid");
    }
    return 0;
}
